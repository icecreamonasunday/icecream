---
pageable: true
per_page: 4
---

<div class="jumbo-feature">
  <div class="container">
    <% blog.articles[0...1].each do |article| %>
      <div class="left">
        <img src="<%= article.data.illustration_tag %>" class="fadeIn" />
      </div>
      <div class="right">
        <article>
          <img src="images/illustrations/rubber-spatula.png" />
          <h1>
            <%= article.title %>
          </h1>
          <time><%= article.date.strftime('%b %e, %Y') %></time>

          <%= article.summary %>

          <a class="link-light" href="<%= article.url %>">Get Recipe and Read more</a>
        </article>
      </div>
    <% end %>
  </div>
</div>

<div class="featured-flavors">
  <div class="container">
    <h2>Featured Flavors</h2>
    <div class="flavors">
      <% blog.articles[0...3].each do |article| %>
        <div class="flavor">
          <img src="<%= article.data.ingredients_tag %>" class="fadeIn" />
          <article>
            <h1>
              <%= article.title %>
            </h1>

            <a class="link-medium" href="<%= article.url %>">Get Recipe</a>
          </article>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="latest-posts">
  <div class="container">
    <h2>Latest Posts</h2>
    <div class="posts">
      <% if paginate && num_pages > 1 %>
        <p>Page <%= page_number %> of <%= num_pages %></p>

        <% if prev_page %>
          <%= link_to 'Previous page', prev_page %>
        <% end %>
      <% end %>

      <% page_articles.each_with_index do |article, i| %>
        <div class="post">
          <img src="<%= article.data.illustration_tag %>" class="fadeIn" />
          <h2><%= article.title %> </h2>
          <time><%= article.date.strftime('%b %e, %Y') %></time>
          <a class="link-light-small" href="<%= article.url %>">Read More</a>
        </div>
      <% end %>

      <% if paginate %>
        <% if next_page %>
          <%= link_to 'Next page', next_page %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
